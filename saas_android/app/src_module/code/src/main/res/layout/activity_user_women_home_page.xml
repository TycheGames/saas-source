<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_women_homePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color"
    tools:context=".activities.home.UserWomenHomePageActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="318dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="218dp"
                        android:background="@drawable/user_homepage_top_bg"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/iv_womenuserhome_head_portrait"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/user_homepage_women_head_portrait_icon"/>

                            <ImageView
                                android:id="@+id/iv_womenuserhome_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="2dp"
                                android:layout_marginBottom="2dp"
                                android:src="@mipmap/home_listitem_certified_icon"
                                android:visibility="gone"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_womenuserhome_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="17sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="25  |  Shanghai  |  IT"
                            android:textColor="@color/color_9e9ea4"
                            android:textSize="12sp"/>

                        <ImageView
                            android:id="@+id/iv_womenuserhome_authenticated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/mine_authenticated_icon"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_authentication_described"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="She has been certified as an official circle of friends"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_womenuserhome_date_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:drawableLeft="@mipmap/user_location_textleft_white_icon"
                                android:drawablePadding="5dp"
                                android:text="@string/dating_range"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_womenuserhome_distance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_womenuserhome_online"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="3 minutes ago"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_womenuserhome_follow"
                        android:layout_width="54dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="70dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_btn_common_corners_50"
                        android:gravity="center"
                        android:text="+Favorite"
                        android:textColor="#232021"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/shape_white_bg_corners_6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_womenuserhome_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="165"
                                android:textColor="@color/color_3e3d3d"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="cm"
                                android:textColor="@color/color_666666"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="height"
                                android:textColor="#cfcfd2"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_womenuserhome_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="56"
                                android:textColor="@color/color_3e3d3d"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="kg"
                                android:textColor="@color/color_666666"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/weight"
                                android:textColor="#cfcfd2"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_womenuserhome_bust"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="40"
                                android:textColor="@color/color_3e3d3d"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_womenuserhome_bust_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="c"
                                android:textColor="@color/color_666666"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/bust"
                                android:textColor="#cfcfd2"
                                android:textSize="12sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_womenuserhome_show_radio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#33689CFF"
                    android:drawableRight="@drawable/user_homepage_radio_textright_icon"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:text="She is starting a dating broadcast"
                    android:textColor="#689CFF"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <!--图片区域-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/ll_no_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/user_homepage_photo_empty_img"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He hasn't uploaded photos～"
                            android:textColor="@color/color_9e9ea4"
                            android:textSize="11sp"/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Her introduction"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_womenuserhome_introduce_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/color_3e3d3d"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/dating_shows"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_date_program"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="@string/eat_and_drink"
                            android:textColor="@color/color_3e3d3d"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_f2f2f2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Dating Conditions"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_date_condition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="High value"
                            android:textColor="@color/color_3e3d3d"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_f2f2f2"/>

                    <RelativeLayout
                        android:id="@+id/rl_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/we_chat"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_check_weixin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:text="View>"
                            android:textColor="@color/color_232021"
                            android:textSize="12sp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_f2f2f2"/>

                    <RelativeLayout
                        android:id="@+id/rl_qq"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/qq"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_check_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:text="View>"
                            android:textColor="@color/color_232021"
                            android:textSize="12sp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="style"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="Lace"
                            android:textColor="@color/color_3e3d3d"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_f2f2f2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Language"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_language"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="English"
                            android:textColor="@color/color_3e3d3d"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_f2f2f2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="emotion"
                            android:textColor="@color/color_666666"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_womenuserhome_affection"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="single"
                            android:textColor="@color/color_3e3d3d"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="70dp"
                    android:drawableLeft="@mipmap/public_prompt_icon"
                    android:drawablePadding="5dp"
                    android:text="Do not conduct illegal transactions through appointments, if reported, verification will be processed as a title!"
                    android:textColor="@color/color_9e9ea4"
                    android:textSize="11sp"/>

            </LinearLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_titlebar_leftback_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/common_titbar_back_white_icon"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/color_3e3d3d"
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/iv_titlebar_right_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/common_titbar_right_more_icon"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_womenuserhome_commenting_on_his"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/user_homepage_evaluation_texttop_icon"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="Rate her"
            android:textColor="@color/color_666666"
            android:textSize="11sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/theme_background_color"/>

        <TextView
            android:id="@+id/tv_womenuserhome_private_chat_he"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/user_homepage_private_chat_texttop_icon"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="Talk to her privately"
            android:textColor="@color/color_666666"
            android:textSize="11sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/theme_background_color"/>

        <TextView
            android:id="@+id/tv_womenuserhome_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/user_homepage_contact_texttop_icon"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="contact details"
            android:textColor="@color/color_666666"
            android:textSize="11sp"/>

    </LinearLayout>

</RelativeLayout>