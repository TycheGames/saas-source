<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_main_tab_root"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:gravity="center"
    tools:context="com.bigshark.android.vh.main.tab.MainTabItemViewHolder">

    <LinearLayout
        android:id="@+id/main_tab_content_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minWidth="90dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_tab_icon_ImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/main_tab_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="title"
            android:textColor="#FF999999"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/main_tab_red_point"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/main_tab_content_LinearLayout"
        android:background="@drawable/selector_main_tab_pointer"
        android:visibility="visible" />

</RelativeLayout>