<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_launcher_guide_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_background"
    tools:context="com.bigshark.android.activities.home.ApplicationGuiderActivity">

    <com.bigshark.android.core.component.navigator.NavigationStatusLinearLayout
        android:id="@+id/app_launcher_guide_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defult_style="NO_TITLE_WHITE" />

    <android.support.v4.view.ViewPager
        android:id="@+id/app_launcher_guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/app_launcher_guide_guidelayout"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" />

</RelativeLayout>
