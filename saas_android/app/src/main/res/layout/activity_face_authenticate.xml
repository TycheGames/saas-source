<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authenticate_liveness_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/face_authenticate_bg"
    tools:context="com.bigshark.android.activities.authenticate.PersonalFaceAuthenticateActivity">

    <com.bigshark.android.core.component.navigator.NavigationStatusLinearLayout
        android:id="@+id/authenticate_liveness_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:defult_style="COLOR_BLACK"
        app:left_button_drawable="@drawable/nav_back_black_icon"
        app:title_background="@color/color_common_white"
        app:title_text="@string/your_selfie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:layout_below="@+id/authenticate_liveness_title"
        android:background="@color/face_authenticate_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/authenticate_liveness_selfie_img"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="@drawable/shape_face_authenticate_bg"
            android:scaleType="center"
            android:src="@drawable/user_authenticate_liveness_take" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/take_selfie"
            android:textColor="@color/take_selfie_text_bg"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/selfie_img_tip"
            android:textColor="@color/take_selfie_tip_bg"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/authenticate_liveness_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_global_button"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/submit_text"
            android:textColor="@color/common_btn_textcolor_selector"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
