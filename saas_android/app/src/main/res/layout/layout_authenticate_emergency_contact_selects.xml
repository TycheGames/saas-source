<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_contact_relation_item_root"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/color_common_white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <View
        android:id="@+id/select_contact_relation_item_radio"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_contact_radio_default" />

    <TextView
        android:id="@+id/select_contact_relation_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/select_contact_relation_item_radio"
        android:gravity="center|start"
        android:textColor="@color/color_common_text_tip"
        android:textSize="15sp" />

</RelativeLayout>
