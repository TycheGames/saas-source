<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authenticate_kyc_face_root"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginTop="12dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/authenticate_kyc_face_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="34dp"
        android:text="@string/your_selfie"
        android:textColor="@color/color_common_text_tip"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/authenticate_kyc_face_pic"
        android:layout_width="68dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_authenticate_kyc_user_selfie" />

    <ImageView
        android:id="@+id/authenticate_kyc_face_status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignEnd="@id/authenticate_kyc_face_pic"
        android:layout_alignBottom="@id/authenticate_kyc_face_pic"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/user_authenticate_status_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authenticate_kyc_face_pic"
        android:layout_alignEnd="@id/authenticate_kyc_face_pic"
        android:layout_marginTop="3dp"
        android:text="@string/selfie_text"
        android:textColor="#5e000000"
        android:textSize="10sp" />

</RelativeLayout>