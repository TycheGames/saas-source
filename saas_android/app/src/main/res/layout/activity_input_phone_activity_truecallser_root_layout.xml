<RelativeLayout android:id="@+id/input_phone_activity_truecaller_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/input_phone_truecaller_root_margin"
    android:layout_marginEnd="@dimen/input_phone_truecaller_root_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/input_phone_activity_truecaller_login_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_phone_truecaller_root_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/input_phone_truecaller_root_margin_bottom"
        android:background="@drawable/mine_inputphone_truecaller_bg"
        android:padding="@dimen/input_phone_truecaller_root_padding">

        <ImageView
            android:layout_width="@dimen/input_phone_truecaller_img_width"
            android:layout_height="@dimen/input_phone_truecaller_img_height"
            android:src="@drawable/mine_inputphone_truecaller_icon" />

        <TextView
            android:id="@+id/input_phone_activity_truecaller_login_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/login_with_truecaller"
            android:textColor="#ff127fff"
            android:textSize="@dimen/input_phone_truecaller_login_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/input_phone_activity_truecaller_login_root"
        android:layout_marginBottom="@dimen/input_phone_truecaller_line_margin_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/input_phone_truecaller_line_width"
            android:layout_height="@dimen/view_line_height"
            android:layout_weight="1"
            android:background="#FFE7E7E7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="26dp"
            android:text="@string/or_text"
            android:textColor="#ff888888"
            android:textSize="@dimen/view_line_text_size" />

        <View
            android:layout_width="@dimen/input_phone_truecaller_line_width"
            android:layout_height="@dimen/view_line_height"
            android:layout_weight="1"
            android:background="#FFE7E7E7" />

    </LinearLayout>

</RelativeLayout>