<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="16dp"
                android:height="16dp" />

            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/theme_color" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="16dp"
                android:height="16dp" />
            <solid android:color="@color/theme_color" />
        </shape>
    </item>

</layer-list>
